<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>netcoreapp2.2</TargetFrameworks>
        <RootNamespace>Snap</RootNamespace>
        <AssemblyName>Snap</AssemblyName>
        <PackageId>dotnet-snap</PackageId>
        <Description>A portable .NET core tool for installing applications on Windows or Unix using nupkgs.</Description>
        <IsPackable>true</IsPackable>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>dotnet-snap</ToolCommandName>
    </PropertyGroup>

    <ItemGroup>
      <Compile Remove="bin\**" />
      <Compile Remove="nupkgs\**" />
      <Compile Remove="obj\**" />
      <EmbeddedResource Remove="bin\**" />
      <EmbeddedResource Remove="nupkgs\**" />
      <EmbeddedResource Remove="obj\**" />
      <None Remove="bin\**" />
      <None Remove="nupkgs\**" />
      <None Remove="obj\**" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="..\..\tools\rcedit.exe" Pack="True" Link="rcedit.exe" PackagePath="\tools\rcedit.exe">
            <Visible>false</Visible>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.4.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Snap.Core\Snap.Core.csproj" />
    </ItemGroup>

</Project>
