<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\Snap\Snap.Deps.targets" />
    <Import Project="..\Snap.Installer\Snap.Installer.Deps.targets" />

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>netcoreapp2.2</TargetFrameworks>
        <RootNamespace>snapx</RootNamespace>
        <AssemblyName>snapx</AssemblyName>
        <PackageId>snapx</PackageId>
        <Description>A portable .NET core tool for installing applications on Windows or Unix using nupkgs.</Description>
        <IsPackable>true</IsPackable>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>snapx</ToolCommandName>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>

    <ItemGroup>
        <Compile Remove="bin\**" />
        <Compile Remove="nupkgs\**" />
        <Compile Remove="obj\**" />
        <EmbeddedResource Remove="bin\**" />
        <EmbeddedResource Remove="nupkgs\**" />
        <EmbeddedResource Remove="obj\**" />
        <None Remove="bin\**" />
        <None Remove="nupkgs\**" />
        <None Remove="obj\**" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="../../runtimes/dotnet-runtime-2.2.1-linux-x64.zip" Pack="true" Link="Assets/Runtimes/%(Filename)%(Extension)" />
        <Content Include="../../runtimes/dotnet-runtime-2.2.1-win-x64.zip" Pack="true" Link="Assets/Runtimes/%(Filename)%(Extension)" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.4.3" /> 
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Snap\Snap.csproj" />
        <ProjectReference Include="..\Snap.Installer\Snap.Installer.csproj" />
    </ItemGroup>

</Project>
