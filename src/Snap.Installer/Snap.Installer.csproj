<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\Snap\Snap.Deps.targets" />

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>netcoreapp2.1</TargetFrameworks>
        <RootNamespace>Snap.Installer</RootNamespace>
        <AssemblyName>Snap.Installer</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <EmbeddedResource Include="**\*.xaml" SubType="Designer" />        
        <EmbeddedResource Include="Assets\**\*" />        
        <EmbeddedResource Remove="Assets\AssetsTypeRoot.cs" />
        <EmbeddedResource Include="../Snap.CoreRun/resources/CoreRun.ico" Link="Assets\snap.ico" />
        <Compile Update="**\*.xaml.cs" DependentUpon="%(Filename)" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia" Version="0.7.1-cibuild0001356-beta" />
        <PackageReference Include="Avalonia.Desktop" Version="0.7.1-cibuild0001356-beta" />
        <PackageReference Include="Avalonia.ReactiveUI" Version="0.7.0" />
        <PackageReference Include="LightInject" Version="5.4.0" />
        <PackageReference Include="CommandLineParser" Version="2.4.3" />
        <PackageReference Include="NLog" Version="4.5.11" /> 
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Snap\Snap.csproj" />
    </ItemGroup>

</Project>